.anchor {
  display:flex;
  flex-direction: column;
  color: #c6c6c6;
  font-size:20rpx;
  width:100%;
  height: 300rpx;
}
.eachitem {
  margin-left: 11rpx;
  margin-right: 11rpx;
  margin-top: 8rpx;
  margin-bottom: 8rpx;
}
.eachitem .ava {
   width: 300rpx;
   height: 300rpx;
   overflow:hidden;
   position: relative; 
}
.eachitem .ava .postImg {
   width: 100%;
   height: 300rpx;
   /* border-top-left-radius: 19rpx;
   border-top-right-radius: 19rpx; */
}
.eachitem .ava .lost {
   font-size: 22rpx;
   color: #fff;
   background: #f96159;
   position: absolute;
   bottom: 0;
   left: 0;
   padding: 6rpx 16rpx;
   /* border-radius: 0 30rpx 0 0; */
}
.eachitem .ava .found {
   font-size: 22rpx;
   color: #fff;
   background: #ffd900;
   position: absolute;
   bottom: 0;
   left: 0;
   padding: 6rpx 16rpx;
   /* border-radius: 0 30rpx 0 0; */
}
.eachitem .info {
   width: 432rpx;
   height: 300rpx;
   overflow:hidden;
   position: relative; 
   top: -300rpx;
   left: 300rpx;
}
.eachitem .info .underground{
  height: 300rpx;
  width: 100%;
  /* border-bottom-left-radius: 19rpx; */
  /* border-bottom-right-radius: 19rpx; */
}
.eachitem .info .stuff {
  font-size: 30rpx;
  font-weight: bold;
  line-height: 140%;
   color: black;
   position: absolute;
   top: 5rpx;
   left: 0;
   padding: 6rpx 14rpx;
}
.eachitem .info .time {
  font-size: 28rpx;
   color: #b3b3b3;
   position: absolute;
   bottom: 5rpx;
   right: 2rpx;
   padding: 6rpx 14rpx;
}
.lbs {
  display:flex;
  flex-direction: row;
  margin-bottom: 20rpx;
  align-items: center;
}
.lbs>image {
  width: 21rpx;
  height: 28rpx;
  margin-right: 12rpx;
}
.lbs text {
  margin-right: 14rpx;
}

