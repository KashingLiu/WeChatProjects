<view>
  <view class='background'>
    <navigator url='{{nologin}}'>
      <image src='{{avatarUrl}}' class='avatar'></image>
    </navigator>
    <text class='text'>{{nickName}}</text>
  </view>
  <view class="weui-cells weui-cells_after-title">
    <navigator url="{{broadcasturl}}" class="weui-cell weui-cell_access" hover-class="none">
      <view class="weui-cell__hd">
        <image src="/images/mine.png" style="margin-right: 14px;vertical-align: middle;width:19px; height: 19px;"></image>
      </view>
      <view class="weui-cell__bd" style='margin-bottom:-1px;'>我的发布</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
    <navigator url="" class="weui-cell weui-cell_access" hover-class="none">
      <view class="weui-cell__hd">
        <image src="/images/wechat.png" style="margin-right: 13px;margin-bottom: 1px;vertical-align: middle;width:20px; height: 17px;"></image>
      </view>
      <view class="weui-cell__bd" style='margin-bottom:-1px;'>联系客服</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
    <navigator url="" class="weui-cell weui-cell_access" hover-class="none">
      <view class="weui-cell__hd">
        <image src="/images/about.png" style="margin-right: 12px;margin-top: -2px;vertical-align: middle;width:21px; height: 21px;"></image>
      </view>
      <view class="weui-cell__bd">关于</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
  </view>
</view>